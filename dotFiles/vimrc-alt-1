set nocompatible
set backspace=indent,eol,start
set number
set background=dark
set nowrap
set expandtab
set tabstop=4
set shiftwidth=4
set t_Co=256
set term=xterm-256color
set termencoding=utf-8
set path+=**
set hlsearch
set hidden

syntax on

" Plug: Vim plug-in manager; https://github.com/junegunn/vim-plug
call plug#begin()

Plug 'scrooloose/nerdtree'
Plug 'sheerun/vim-polyglot'
Plug 'clausreinke/typescript-tools.vim'

call plug#end()

filetype plugin indent on
au BufRead,BufNewFile *.ts  setlocal filetype=typescript
au BufWrite * :%s/\s\+$//e

source /opt/boxen/homebrew/lib/python2.7/site-packages/powerline/bindings/vim/plugin/powerline.vim
set laststatus=2

set omnifunc=syntaxcomplete#Complete

let g:TSS = ['/opt/boxen/nodenv/versions/v0.10.26/lib/node_modules/typescript-tools/bin/tss']

command NT NERDTree
command Nt NERDTree

nnoremap <silent> <left> :bprevious<cr>
nnoremap <silent> <right> :bnext<cr>

